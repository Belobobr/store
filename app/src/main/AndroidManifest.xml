<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mixailsednev.storeproject"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <application
      android:name=".ProductStoreApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
  >
    <activity
        android:name=".view.MainActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".view.ProductDetailActivity"
        android:label="@string/title_product_detail"
        android:parentActivityName=".view.MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value=".view.MainActivity"/>
    </activity>


    <provider
        android:name=".model.content_provider.ProductStoreContentProvider"
        android:authorities="com.mixailsednev.storeproject"
        android:enabled="true"
        android:exported="false">
    </provider>
  </application>

</manifest>