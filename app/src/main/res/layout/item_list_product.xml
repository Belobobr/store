<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/one_line_list_item"
>


  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/avatar_size"
      android:layout_height="@dimen/avatar_size"
      android:layout_marginLeft="@dimen/horizontal_content_margin"
      android:layout_centerVertical="true"
      android:src="@drawable/afro"/>

  <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/item_margin"
      android:layout_centerVertical="true"
      android:textAppearance="@style/TextAppearance.ListItem.MainText"
      tools:text="Item name"
  />

  <TextView
      android:id="@+id/cost"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/horizontal_content_margin"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:textAppearance="@style/TextAppearance.ListItem.SecondaryText"
      tools:text="Item name"
  />
</RelativeLayout>