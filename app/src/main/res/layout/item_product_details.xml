<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

  <ImageView
      android:id="@+id/icon"
      android:layout_width="@dimen/icon_size"
      android:layout_height="@dimen/icon_size"
      android:layout_marginLeft="@dimen/horizontal_content_margin"
      tools:src="@drawable/ic_filter_list_black_24px"
  />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginLeft="@dimen/item_margin"
  >

    <TextView
        android:id="@+id/param_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.ListItem.MainText"
        tools:text="Param value"
    />

    <TextView
        android:id="@+id/param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.ListItem.SecondaryText"
        tools:text="Param"
    />

  </LinearLayout>

</FrameLayout>