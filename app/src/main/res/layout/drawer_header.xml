<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navdrawer_image_height"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navdrawer_image_height"
        android:contentDescription="@string/cd_navdrawer_image"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_material_design" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo"
        android:layout_width="@dimen/profile_image_size"
        android:layout_height="@dimen/profile_image_size"
        android:layout_marginLeft="@dimen/horizontal_content_margin"
        android:layout_marginStart="@dimen/horizontal_content_margin"
        android:layout_marginTop="@dimen/profile_image_margin_top"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:text="Paresh Mayani"
        android:layout_marginTop="@dimen/margin_user_name"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/horizontal_content_margin"
        android:layout_marginStart="@dimen/horizontal_content_margin"
        android:textColor="@android:color/white"
        android:layout_above="@+id/user_email"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/user_email"
        android:text="pareshmayani@gmail.com"
        android:layout_marginBottom="@dimen/margin_user_email"
        android:layout_alignLeft="@id/user_name"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"/>

</RelativeLayout>